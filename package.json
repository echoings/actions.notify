{
  "name": "actions.notify",
  "version": "0.0.1",
  "description": "DIY your github actions",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "repository": "https://github.com/echoings/actions.notify",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "dev": "yarn watch:build",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint test --ext .ts",
    "test:prettier": "prettier \"test/**/*.ts\" --check",
    "test:unit": "jest --coverage",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts,test/**/*.ts}\"",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --coverage --watch",
    "cov": "run-s build test:unit && open-cli coverage/report.html",
    "cov:report-coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "doc": "run-s doc:html && open-cli dist/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out dist/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json dist/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d dist/docs",
    "commit": "git-cz",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test cov doc:html version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@actions/artifact": "^0.4.1",
    "@actions/cache": "^1.0.4",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "axios": "^0.21.0",
    "crypto-js": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@changesets/cli": "^2.12.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/crypto-js": "^4.0.1",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.2",
    "coveralls": "^3.1.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-html-reporters": "^2.1.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.1.3"
  },
  "files": [
    "dist/main",
    "dist/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-configrc.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
